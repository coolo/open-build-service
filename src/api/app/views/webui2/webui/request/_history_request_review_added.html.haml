%hr
.media
  - review = Review.find(history_element.description_extension)
  = request_user_image_tag(history_element.user)
  .media-body
    %p
      = link_to(history_element.user, user_show_path(history_element.user))
      added review
      = review_description(review)
      %span{ title: l(history_element.created_at.utc) }
        = time_ago_in_words(history_element.created_at.utc)
        ago
    %p
      = history_element.comment

= render partial: 'webui2/webui/request/review_history', locals: { review: review, request: request }
